{
	"manifest_version": 2,

	"name": "淘宝秒杀助手",
	"description": "帮你更快点儿",
	"version": "1.0",

	"background": {
		"scripts": ["bg.js"]
	},
	"icons": {
		"128": "icon-128.png",
		"64": "icon-64.png",
		"32": "icon-32.png"
	},
	"browser_action": {
		"default_icon": "icon-19-disabled.png"
	},
	"permissions": [
		"webRequest",
		"tabs",
		"*://miao.item.taobao.com/*",
		"*://img1.tbcdn.cn/tfscom/TB1*",
		"*://m.ajax.taobao.com/qst.htm*"
	],
	"content_scripts": [{
		"matches": [
			"*://miao.item.taobao.com/*"
		],
		"js": ["caman.full.min.js", "contentscript.js"]
	}]
}
