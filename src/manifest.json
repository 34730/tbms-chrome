{
	"manifest_version": 2,

	"name": "淘宝秒杀助手",
	"description": "帮你更快点儿",
	"version": "1.0",

	"background": {
		"scripts": ["bg.js"]
	},
	"icons": {
		"128": "icon-128.png",
		"64": "icon-64.png",
		"32": "icon-32.png"
	},
	"browser_action": {
		"default_icon": "icon-19-disabled.png"
	},
	"permissions": [
		"webRequest",
		"tabs",
		"*://miao.item.taobao.com/*",
		"*://m.ajax.taobao.com/qst.htm*",
		"*://gm.mmstat.com/tbrate*",
		"*://miaosha.taobao.com/*"
	],
	"content_scripts": [{
		"matches": ["*://miao.item.taobao.com/*", "*://gm.mmstat.com/tbrate*", "*://miaosha.taobao.com/*"],
		"js": ["contentscript.js"]
	}]
}
