{
	"manifest_version": 2,

	"name": "淘宝秒杀助手",
	"description": "帮你更快点儿",
	"version": "1.0",

	"background": {
		"scripts": ["bg.js"]
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab"
	],
	"content_scripts": [{
		"matches": ["https://www.baidu.com/*"],
		"js": ["contentscript.js"]
	}],
	"web_accessible_resources": ["script.js"]
}
